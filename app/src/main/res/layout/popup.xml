<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/popup_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFE4C4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextCountry"
        android:hint="@string/hint_country_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextPopulation"
        android:hint="@string/hint_country_population"
        android:layout_width="wrap_content"
        android:layout_below="@id/editTextCountry"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextPopulation"
        android:text="Save" />

</RelativeLayout>